<Window x:Class="Motarjem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Motarjem"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox Name="input" Text="cat and dog are happy and I am programmer." Margin="5,0" Width="400" />
            <Button HorizontalAlignment="Right" Content="Translate" Margin="5,0" Click="Button_Click" />
        </StackPanel>
        <FlowDocumentPageViewer ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <FlowDocument PageHeight="270">
                <Paragraph Name="output">
                    <Run>Press </Run>
                    <Run FontStyle="Italic">Translate </Run>
                    <Run>to Start...</Run>
                </Paragraph>
            </FlowDocument>
        </FlowDocumentPageViewer>
    </StackPanel>
</Window>
